<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:crx="http://www.day.com/crx/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:rep="internal"
    jcr:primaryType="rep:ACL">
    <allow
        jcr:primaryType="rep:GrantACE"
        rep:principalName="ajo-administrators"
        rep:privileges="{Name}[rep:write]">
        <rep:restrictions
            jcr:primaryType="rep:Restrictions"
            rep:glob="/*/cloudconfigs/ajoconnector/jcr:content*"/>
    </allow>
    <allow1
        jcr:primaryType="rep:GrantACE"
        rep:principalName="ajo-administrators"
        rep:privileges="{Name}[rep:indexDefinitionManagement]">
        <rep:restrictions
            jcr:primaryType="rep:Restrictions"
            rep:glob="/*/oak:index*"/>
    </allow1>
    <allow2
        jcr:primaryType="rep:GrantACE"
        rep:principalName="ajo-administrators"
        rep:privileges="{Name}[jcr:read]">
        <rep:restrictions
            jcr:primaryType="rep:Restrictions"
            rep:glob="/*/cloudconfigs/ajoconnector/*"/>
    </allow2>
    <allow3
            jcr:primaryType="rep:GrantACE"
            rep:principalName="ajo-administrators"
            rep:privileges="{Name}[jcr:read]">
        <rep:restrictions
                jcr:primaryType="rep:Restrictions"
                rep:glob="/*/cloudconfigs/ajosconnector"/>
    </allow3>
</jcr:root>
